.grid {
  align-items: center;
  display: flex;
}

.grid-flex-start {
  align-items: flex-start;
}

.grid-flex-direction-reverse {
  flex-direction: row-reverse;
}

.grid-col-4 {
  flex: 4;
  padding: 0 20px;
}

.grid-col-6 {
  flex: 6;
  padding: 0 20px;
}

.grid-col-8 {
  flex: 8;
  padding: 0 20px;
}

@media (max-width: 719px) {
  .grid {
    display: block;
  }
}
